<div class="layer2 tmar90 shadow pad50">
  <h1 class="cfont">My Shelves</h1>
  <table class="wid100per">
    <thead>
      <tr>
        <th class="bline font2rem">Title</th>
      </tr>
    </thead>
    <br>
    <tbody>
      <td class="efont"><%= link_to '', new_shelf_path, class: "glyphicon glyphicon-plus pull-left efont font2rem tmar15 bmar15" %></td>
      <% @shelves.each do |shelf| %>
      <tr class="tmar15">
        <td class="pull-left tmar15 efont"><%= link_to shelf.title, shelf, class: "efont font2rem rpad25" %></td>
          <% if user_is_authorized_for_shelves?(shelf) %>
            <td class="pull-right font2rem tmar15"><%= link_to '', shelf, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-trash font2rem nodec" %></td>
            <td class="pull-right efont font2rem tmar15"><%= link_to '', edit_shelf_path(shelf), class: "rpad25 efont glyphicon glyphicon-pencil font2rem " %></td>
          <% end %>
        <tr>
          <td class="pull-left tmar15">
            <small>
              <i class=" lmar25 rmar10"><%= shelf.bookmarks.count %><i/>
              <i>bookmarks</i>
            </small>
          </td>
        </tr>
      <% end %>
      </tr>
    </tbody>
  </table>
  <div class="bline tmar25 tpad15">
  </div>
  <%= link_to '', root_path, class: "glyphicon glyphicon-home gfont font2rem tmar25 tcent" %>
  <br>
</div>
