<div class="layer2">
  <p id="notice"><%= notice %></p>
  <h1 class="dfont">My Shelves</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @shelves.each do |shelf| %>
        <tr>
          <td><%= shelf.title %></td>
          <td><%= shelf.user %></td>
          <td><%= link_to 'Show', shelf %></td>
          <td><%= link_to 'Edit', edit_shelf_path(shelf) %></td>
          <td><%= link_to 'Destroy', shelf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Shelf', new_shelf_path %>
</div>
