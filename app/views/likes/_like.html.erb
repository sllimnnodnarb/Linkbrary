
<% if policy(Like.new).create? %>
  <% if like = current_user.like_for(bookmark) %>
    <%= link_to [bookmark, like], class: "nodec pull-left", method: :delete do %>
      <i class="glyphicon glyphicon-thumbs-down hfont font2rem"> Unlike</i>
    <% end %>
  <% else %>
    <%= link_to [bookmark, Like.new],class: "nodec jfont pull-left", method: :post do %>
    <i class="glyphicon glyphicon-thumbs-up jfont font2rem"> Like</i>
    <% end %>
  <% end %>
<% end %>
