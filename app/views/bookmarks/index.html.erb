<div class="layer2 shadow tmar90">
  <p id="notice"><%= notice %></p>
  <h1 class="bmar25 bpad25 bline cfont">Listing Bookmarks</h1>
  <table>
    <thead>
      <tr>
        <th>Url</th>
        <th>Shelf</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @bookmarks.each do |bookmark| %>
        <tr>
          <td><%= bookmark.url %></td>
          <td><%= bookmark.shelf %></td>
          <td><%= link_to 'Show', [@shelf, bookmark] %></td>
          <td><%= link_to 'Edit', edit_shelf_bookmark_path(@shelf, bookmark) %></td>
          <td><%= link_to 'Destroy', [@shelf, bookmark], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Bookmark', new_shelf_bookmark_path(@shelf) %>
</div>
